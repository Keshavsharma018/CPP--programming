
#include<iostream>
using namespace std;
int main(){
    int n ;
    cout<<"Enter the value of n ";
    cin>>n;
    
    if(n<=0){
        cout<<"Invalid input term, the sum cannot be calculated";
        return 1;
    }
    int sum=0;
    for(int i=2;i<=n;i=i+2){
        sum+=i;
    }
    cout<<"the sum of even number upto"<< n <<"is :"<<sum; 
    return 0;
}
