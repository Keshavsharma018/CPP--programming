
#include <iostream>
using namespace std;

int main() {
   int n;
   cout<<"Enter the no. of elements";
   cin>>n;
   
   if(n<=0){
       cout<<"Invalid number of elements entered";
       return 0;
   }
   double number,largest;
   cout<<"Enter number1:";
   cin>>largest;
   
   for( int i=2;i<=n;i++){
       cout<<"Enter number"<<i<<":";
       cin>>number;
   if(number>largest){
       largest=number;
   }
   }
   cout<<"The largest number is :"<<largest; 
    return 0;
}
