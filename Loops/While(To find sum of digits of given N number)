
#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"Enter the number = ";
    cin>>n;
    if(n<=0){
        cout<<"Invalid entered number";
        return 1;
    }
    int sum = 0;
    int digit;
    while(n!=0){
        digit=n%10;
        sum+=digit;
        n=n/10;
        }
        cout<<"The sum of the digits of the given number is ="<<sum;
return 0;
}
