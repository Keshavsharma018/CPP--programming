
#include <iostream>
using namespace std;
int main() {
   int a,b;
   char op;
   std::cout<<"enter the value of a ="<<endl;
   std::cin>>a;
   std::cout<<"enter the value of b ="<<endl;
   std::cin>>b;
   std::cout<<"enter operator"<<endl;
   std::cin>>op;
   switch(op)
   {
     case '+' :
       cout<<a+b;
       break ;
     case '-' :
       cout<<a-b;
       break ;
     case '*' :
       cout<<a*b;
       break;
     case '/' :
       cout<<a/b;
       break;
     default :
       cout<<a%b;
       break;
     
       
   }
   

    return 0;
}
