#include <iostream>
using namespace std;
int main() {
    int rows;
    
    cout<<"Enter the no. of rows : ";
    cin>>rows;
    
    for (int i = 1; i <= rows; ++i) {
        
         for (int j = 1; j <= rows - i; ++j) {
            std::cout<<"\t";
        }
        
        for (int j = i; j <= 2 * i - 1; ++j) {
            std::cout<<j<<"\t";
        }
        
        for (int j = 2 * i - 2; j >= i; --j) {
            std::cout<<j<<"\t";
        }
        
        std::cout << std::endl;
    }
    
    return 0;
}
