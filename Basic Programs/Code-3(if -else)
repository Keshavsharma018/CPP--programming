#include <iostream>
using namespace std;
int main(){
float l,b,A,P;
std::cout<<"Enter length of the recatngle =";
std::cin>>l;
std::cout<<"Enter breadth of the recatngle =";
std::cin>>b;
A=l*b;
P=2*(l+b);
if(A>P){
    std::cout<<"Area is bigger"<<endl<<"Area is="<<A;
}
else{
    std::cout<<"Perimeter is bigger"<<endl<<"Perimeter is="<<P;
}
return 0;
}
